{
  "manifest_version": 2,
  "name": "Gray Filter",
  "description": "Gray filter for images and videos.",
  "version": "1.0",
  "author": "Jay Shi",

  "browser_action": {
    "default_icon": {
      "19": "./assets/img/logo_19.png",
      "38": "./assets/img/logo_38.png"
    },
    "default_title": "Gray Filter"
  },

  "icons": {
    "16": "./assets/img/logo_16.png",
    "48": "./assets/img/logo_48.png",
    "128": "./assets/img/logo_128.png"
  },

  "content_scripts": [{
      "matches": ["https://www.youtube.com/*", "https://www.facebook.com/*"],
      "css": ["./src/css/style.css"]
  }],

  "permissions": ["https://www.youtube.com/*", "https://www.facebook.com/*"]
}