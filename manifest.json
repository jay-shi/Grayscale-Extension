{
  "manifest_version": 2,
  "name": "Gray Filter",
  "description": "Gray filter for images and videos.",
  "version": "1.0",
  "author": "Jay Shi",

  "browser_action": {
    "default_icon": "./assets/img/logo.png",
    "default_title": "Gray Filter"
  },

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "css": ["./src/css/style.css"]
  }],

  "permissions": ["activeTab"]
}